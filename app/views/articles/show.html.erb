<h2><%= @article.title %></h2>
<p><%= @article.text %></p>

<%= link_to 'Edit', edit_article_path(@article) %>
<%= link_to 'Delete', @article, method: :delete, data: {confirm: "You sure?"} %>

<hr>
<h3>Comments</h3>
<% if @comments.size != 0 %>
<% @comments.each do |com| %>
	<p><i> <%= com.author %> said:</i><br>
	<%= com.body %></p>
	<hr>
<% end %>
<% else %>
<p>No comments yet!</p>
<% end %>
<!-- ============================================== -->
<h3>Add your comment:</h3>
<%= form_for([@article,@article.comments.build]) do |f| %>
 <p>
	<%= f.label :author %><br>
	<%= f.text_field :author %>
</p>
<p>
	<%= f.label :body %><br>
	<%= f.text_area :body %>
</p>
<p>
	
	<%= f.submit %>
</p>
	

<% end %>